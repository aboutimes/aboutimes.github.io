/*Custom styles*/
/*主页文章 设置顺滑渲染*/
 
  /*分割线*/
  html,body {
    background-color: rgba(252,252,252,1);
  }
  .main {
    padding-top: 30px;
  }
  .post {
   -webkit-font-smoothing: antialiased;
   text-rendering: optimizeLegibility;
  }
  table {
    width: 92%;
    margin: 10px auto;
  }
  th,td{
    border:1px solid lightgray;
  }
  /*限制图片宽度*/
  .post img {
    max-width:85%;
    /*max-height:100%;*/
  }
  .description {
    /*座右铭*/
    color:lightgray;
    font-size: 10px;
    font-weight:lighter; 
    clear: both; 
    display: none;
