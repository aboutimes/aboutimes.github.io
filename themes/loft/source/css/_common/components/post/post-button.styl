.post-button {
  margin-right: 20px;
  margin-top: 0px;
  text-align:right;
  +mobile() {
    /*margin-top: 50px;*/
    text-align:center;
    margin: 0;
  }

  .btn {
    color: $read-more-color;
    font-size: $read-more-font-size;
    background: $read-more-bg-color;
    border-radius: $read-more-border-radius;
    line-height: 2;
    margin: 0;
    border: 0;
  }
  .btn:hover {
    @extend .btn:hover;
  }
  .fa-fw {
    width: (18em / 14);
    text-align: left;
  }
}
