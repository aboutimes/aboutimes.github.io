.site-nav {
  +mobile() {
    position: absolute;
    left: 0;
    top: 60px;
    margin: 0;
    width: 100%;
    padding: 0;
    /*background: white;*/
    border-bottom: 1px solid $gray-lighter;
    z-index: $zindex-3;
    background-color: #fde69f;
  }
}
.site-nav ul li:last-child {
  border: 0;
}

.menu {
  +mobile() { text-align: center;margin-bottom: 0;}
}
.menu .menu-item {
  +mobile() {
    border-bottom: 1px solid #325d72;
    display: block;
    margin: 0 10px;
    vertical-align: top;
  }

  br {
    +mobile() { display: none; }
  }

  a {
    +mobile() { padding: 10px 10px; }
  }
  .fa { margin-right: 0; }
}